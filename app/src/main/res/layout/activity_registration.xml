<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.complaints.jd.h2h.RegistrationActivity">

    <ImageView
        android:id="@+id/identityImageView"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/identityImageView"
        android:layout_alignTop="@+id/identityImageView"
        android:layout_alignRight="@+id/identityImageView"
        android:layout_alignBottom="@+id/identityImageView"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Click to upload Identity Card"
        android:textColor="#000000" />


    <EditText
        android:id="@+id/tinNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Enter your tin number"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_above="@+id/pass1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/pass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="textPassword"
        android:hint="Set Password"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_above="@+id/onProceed"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/onProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:onClick="onProceed"
        android:text="Register"
        android:textColor="@color/colorTextWhite"
        android:textAppearance="?android:textAppearanceLarge"/>


</RelativeLayout>
